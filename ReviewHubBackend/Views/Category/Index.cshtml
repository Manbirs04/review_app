@model IEnumerable<ReviewHubBackend.Models.Category>

<h1>Categories</h1>
<a asp-action="Add" class="btn btn-primary">Add New Category</a>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.CategoryId</td>
                    <td>@category.CategoryName</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@category.CategoryId" class="btn btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@category.CategoryId" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No categories found.</p>
}
