@model ReviewHubBackend.Models.Review

<h1>Delete Review</h1>
<p>Are you sure you want to delete this review?</p>
<div>
    <p><strong>Review Text:</strong> @Model.ReviewText</p>
    <p><strong>User:</strong> @Model.User?.Username</p>
    <p><strong>Category:</strong> @Model.Category?.CategoryName</p>
    <form asp-action="DeleteReviewConfirmed" method="post">
        <input type="hidden" asp-for="ReviewId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Reviews" class="btn btn-secondary">Cancel</a>
    </form>
</div>
