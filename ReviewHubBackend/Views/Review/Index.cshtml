@model IEnumerable<ReviewHubBackend.Models.Review>

<h1>Reviews</h1>
<a asp-action="Add" class="btn btn-primary">Add New Review</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>User</th>
            <th>Category</th>
            <th>Rating</th>
            <th>Review Text</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var review in Model)
        {
            <tr>
                <td>@review.ReviewId</td>
                <td>@review.User.Username</td>
                <td>@review.Category.CategoryName</td>
                <td>@review.Rating</td>
                <td>@review.ReviewText</td>
                <td>
                    <a asp-action="Details" asp-route-id="@review.ReviewId" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@review.ReviewId" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@review.ReviewId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
